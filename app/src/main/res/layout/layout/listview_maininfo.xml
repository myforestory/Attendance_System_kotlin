<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/listview_maininfo">

    <!--<View-->
    <!--android:id="@+id/divider2"-->
    <!--android:layout_width="1dp"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_weight="1"-->
    <!--android:background="@color/colorMainGrey"-->
    <!--android:visibility="visible" />-->

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="@dimen/dp_42"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_8"
        android:text="1"
        android:textColor="@color/colorMainBlack"
        android:textSize="@dimen/dp_10" />

    <TextView
        android:id="@+id/tvDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tvDate"
        android:layout_toEndOf="@+id/tvDate"
        android:text="土"
        android:textColor="@color/colorMainBlack"
        android:textSize="@dimen/dp_16" />

    <ImageView
        android:id="@+id/imgStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tvRemarks"
        android:layout_marginTop="@dimen/dp_12"
        android:contentDescription="@string/main_disability_StrImg"
        app:srcCompat="@drawable/ic_play" />

    <TextView
        android:id="@+id/tvStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/imgStr"
        android:layout_toEndOf="@id/imgStr"
        android:padding="6dp"
        android:text="9:30"
        android:textColor="@color/colorMainBlack"
        android:textSize="@dimen/dp_20" />

    <ImageView
        android:id="@+id/imgEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imgStr"
        android:layout_toLeftOf="@id/tvEnd"
        android:contentDescription="@string/main_disability_endImg"
        app:srcCompat="@drawable/ic_power_setting" />

    <TextView
        android:id="@+id/tvEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tvStart"
        android:layout_alignRight="@id/tvRemarks"
        android:padding="6dp"
        android:text="18:30"
        android:textColor="@color/colorMainBlack"
        android:textSize="@dimen/dp_20" />

    <TextView
        android:id="@+id/tvWorked_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/tvDay"
        android:padding="6dp"
        android:layout_marginRight="@dimen/dp_6"
        android:text="8:00"
        android:textColor="@color/colorMainBlack"
        android:textSize="@dimen/dp_24" />

    <TextView
        android:id="@+id/tvRemarks"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_36"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgStr"
        android:text="アンドロイド10倍CFDホーム画面ロードのバグ修正"
        android:textSize="@dimen/dp_12"
        android:ellipsize="end"
        android:maxLines="2"
        android:maxEms="500"/>
    <!--android:layout_marginRight="@dimen/dp_70"-->
</RelativeLayout>